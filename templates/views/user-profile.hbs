<!DOCTYPE html>
<html lang="en">
<head>
    {{> head}}
    <title>followthru</title>
</head>
<body>
    {{> page_title}}

    <div class="center-form">
        <form id="edit-profile-form" method="post" action="/profile/edit">
            <input type="text" placeholder={{user.firstName}} name="firstName" >
            <input type="text" placeholder={{user.lastName}} name="lastName" >
            <input type="email" placeholder={{user.email}} name="email">
            <input type="password" placeholder="Password" name="password">
            <button id="edit-profile-btn" type="submit">Save</button>
        </form>
    </div>
    {{> back_arrow}}
</body>
</html>